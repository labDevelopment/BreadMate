<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.mrbuknahsty.breadmate.MainActivity"
    android:background="@drawable/background_one">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Currency Converter"
        android:id="@+id/titleTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:textSize="45dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Choose Currency"
        android:id="@+id/chooseTV"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/titleTV"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:stretchMode="columnWidth"
        android:gravity="center"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LaB Development 2015 "
        android:id="@+id/footerTV"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="USD"
        android:id="@+id/usdButton"
        android:layout_below="@+id/chooseTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="103dp"
        android:layout_alignRight="@+id/chooseTV"
        android:layout_alignEnd="@+id/chooseTV"
        android:textSize="35dp"
        android:onClick="firstCurrencyChoice"
        android:background="@drawable/button"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EUR"
        android:id="@+id/eurButton"
        android:layout_below="@+id/usdButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:layout_alignRight="@+id/usdButton"
        android:layout_alignEnd="@+id/usdButton"
        android:textSize="35dp"
        android:onClick="firstCurrencyChoice"
        android:background="@drawable/button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JPY"
        android:id="@+id/jpyButton"
        android:layout_below="@+id/eurButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:layout_alignRight="@+id/eurButton"
        android:layout_alignEnd="@+id/eurButton"
        android:textSize="35dp"
        android:onClick="firstCurrencyChoice"
        android:background="@drawable/button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GBP"
        android:id="@+id/gbpButton"
        android:layout_below="@+id/jpyButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp"
        android:layout_alignRight="@+id/jpyButton"
        android:layout_alignEnd="@+id/jpyButton"
        android:textSize="35dp"
        android:onClick="firstCurrencyChoice"
        android:background="@drawable/button"/>
</RelativeLayout>
