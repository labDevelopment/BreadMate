<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mrbuknahsty.breadmate.Main2Activity"
    android:background="@drawable/background_two">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/firstChoiceTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="40dp"
        android:textAlignment="center"
        android:height="75dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/userAmountET"
        android:layout_below="@+id/firstChoiceTV"
        android:layout_marginTop="69dp"
        android:layout_alignRight="@+id/firstChoiceTV"
        android:layout_alignEnd="@+id/firstChoiceTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="35dp"
        android:height="50dp"
        android:hint="Enter amount here" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spacerTV"
        android:layout_below="@+id/userAmountET"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/userAmountET"
        android:layout_alignEnd="@+id/userAmountET"
        android:background="#060606" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Convert To"
        android:id="@+id/convertToTV"
        android:layout_below="@+id/spacerTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/spacerTV"
        android:layout_alignEnd="@+id/spacerTV"
        android:textSize="35dp"
        android:textAlignment="center" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionOneButton"
        android:layout_below="@+id/convertToTV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:layout_alignRight="@+id/convertToTV"
        android:layout_alignEnd="@+id/convertToTV"
        android:textSize="35dp"
        android:onClick="secondCurrencyChoice"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionTwoButton"
        android:layout_marginTop="39dp"
        android:textSize="35dp"
        android:layout_below="@+id/optionOneButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="secondCurrencyChoice"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/optionThreeButton"
        android:textSize="35dp"
        android:layout_below="@+id/optionTwoButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_alignRight="@+id/optionTwoButton"
        android:layout_alignEnd="@+id/optionTwoButton"
        android:onClick="secondCurrencyChoice"
        android:background="@drawable/button"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convert All"
        android:id="@+id/converAllButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/optionThreeButton"
        android:layout_alignEnd="@+id/optionThreeButton"
        android:textSize="35dp"
        android:textColor="#f30c0c"
        android:onClick="secondCurrencyChoice"
        android:background="@drawable/button"/>
</RelativeLayout>
